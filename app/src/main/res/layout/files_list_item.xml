<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_light"
    android:paddingBottom="1dp"
    android:paddingTop="1dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_file_list"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_file_icon"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/iv_file_open"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_weight="2.7"
                android:background="@android:color/transparent"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/folder"
                android:textColor="@color/colorAccent" />


            <TextView
                android:id="@+id/tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/iv_file_icon"
                android:layout_weight="1"
                android:clickable="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="v2-1ec9c663776bb044dafc63c8dde56850_r.png"
                android:textColor="@color/primary_text"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv_file_open"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/iv_file_delete"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/iv_file_delete"
                android:layout_weight="2.7"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/open"
                android:text="@string/open_file"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:id="@+id/iv_file_delete"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_weight="2.7"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/delete"
                android:textColor="@color/colorAccent" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>